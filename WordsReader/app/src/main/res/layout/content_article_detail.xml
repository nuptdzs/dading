<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nupt.dzs.wordsreader.ui.activity.ArticleDetailActivity"
    tools:showIn="@layout/activity_article_detail">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/widget_padding"
        android:text="title"
        android:textColor="@color/text_color_title"
        android:textSize="@dimen/big_text_size"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/small_padding"
        android:textSize="16sp"
        android:textColor="@color/text_color_content"
        android:typeface="monospace" />
</LinearLayout>
